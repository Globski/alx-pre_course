/**
 * main - using sizeof to dynamically determine the size of types char, int and float
 * addresses of variables
 * printing the size, in bytes, of a pointer
 * printing the address of a pointer
 * storing the address of variable into a pointer
 *
 * Return: Always 0.
 */
#include <stdio.h>
int main(void) 
{
    int a;
    int *ptrr;
    int *p
    
    a = 32;
    p = &a;
    
    printf("the size of my char is : %zu\n", sizeof(char));
    printf("the size of my int is : %zu\n", sizeof(int));
    printf("the size of my double is : %zu\n", sizeof(double));
    printf("the size of my a is : %zu\n", sizeof(a));
    printf("the size of my a is : %lu\n", sizeof(a));
    printf("the value of p is : %p\n", p);
    printf("the address of variable a is: %p\n", &a);
    printf("the size of my pointer (*ptrr) is : %lu\n", sizeof(ptrr));
    printf("the address of my pointer (*ptrr) is : %p\n", &ptrr);
    printf("the size of my float is : %zu\n", sizeof(float));
    
    return (0);
}
